<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Blogs</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="container mt-4">
    <h2 class="mb-4 text-center">All Blogs</h2>

    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <img src="/<%= blog.image %>" class="card-img-top" />

            <div class="card-body">
              <h5><%= blog.title %></h5>
              <p><%= blog.content.substring(0, 100) %>...</p>

              <a href="/blog/edit/<%= blog._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/blog/delete/<%= blog._id %>" class="btn btn-danger btn-sm">Delete</a>
            </div>

          </div>
        </div>
      <% }) %>
    </div>

  </div>
</body>
</html>
