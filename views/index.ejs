<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Blogs</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>

    /* SAME BACKGROUND AS OTHER PAGES */
    body {
      background: linear-gradient(135deg, #ff9a9e, #fad0c4, #fad0c4);
      background-size: 200% 200%;
      animation: gradientMove 6s ease infinite;
      font-family: "Poppins", sans-serif;
      padding-top: 100px;
      min-height: 100vh;
    }

    @keyframes gradientMove {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* HEADER */
    .glass-nav {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(255,255,255,0.4);
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 999;
      padding: 15px 0;
    }

    .navbar-brand {
      font-size: 32px;
      font-weight: 800;
      background: linear-gradient(to right, #ff5e62, #ff9966);
      -webkit-background-clip: text;
      color: transparent;
    }

    .nav-link {
      color: #4b2e2e !important;
      font-weight: 600;
      font-size: 17px;
      transition: 0.3s;
    }

    .nav-link:hover {
      color: #ffe6e6 !important;
      transform: translateY(-2px);
    }

    /* PAGE TITLE */
    .page-title {
      font-size: 42px;
      font-weight: 800;
      color: transparent;
      text-align: center;
      margin-bottom: 40px;
      background: linear-gradient(to right, #ff5e62, #ff9966);
      -webkit-background-clip: text;
      text-shadow: 0 4px 12px rgba(255, 130, 130, 0.4);
    }

    /* BLOG CARDS */
.blog-card {
  background: rgba(255,255,255,0.15);
  border-radius: 20px;
  overflow: hidden;
  border: 1px solid rgba(255,255,255,0.3);
  box-shadow: 0 20px 35px rgba(0,0,0,0.25);
} 

    .blog-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 25px 45px rgba(0,0,0,0.35);
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .blog-image {
      width: 100%;
      height: 220px;
      object-fit: cover;
      border-bottom: 1px solid rgba(255,255,255,0.3);
    }

    .blog-title {
      font-size: 22px;
      font-weight: 700;
      color: #4b2e2e;
      text-shadow: 0 2px 8px rgba(0,0,0,0.4);
      margin-bottom: 10px;
    }

    .blog-text {
      font-size: 15px;
      color: #4b2e2e;
      opacity: 0.9;
      line-height: 1.5;
    }

    /* EDIT BUTTON */
    .btn-warning {
      background: linear-gradient(to right, #ff512f, #ff9966);
      border: none;
      border-radius: 10px;
      color: #4b2e2e;
      padding: 8px 14px;
      font-weight: 600;
      transition: 0.3s;
    }

    .btn-warning:hover {
      transform: translateY(-3px);
      box-shadow: 0 5px 18px rgba(0,0,0,0.3);
    }

    /* DELETE BUTTON */
    .btn-danger {
      background: linear-gradient(to right, #ff416c, #d50000);
      border: none;
      border-radius: 10px;
      padding: 8px 14px;
      font-weight: 600;
      transition: 0.3s;
      color: white;
    }

    .btn-danger:hover {
      transform: translateY(-3px);
      box-shadow: 0 5px 18px rgba(0,0,0,0.35);
    }

    .badge-tag {
      position: absolute;
      top: 10px;
      left: 10px;
      background: rgba(255,255,255,0.25);
      backdrop-filter: blur(10px);
      padding: 6px 12px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 700;
      color: #4b2e2e;
      letter-spacing: 1px;
      border: 1px solid rgba(255,255,255,0.4);
    }

    /* FOOTER */
    .simple-footer {
      margin-top: 80px;
      padding: 18px 0;
      text-align: center;
      color: #4b2e2e;
      background: rgba(255,255,255,0.18);
      backdrop-filter: blur(10px);
      border-top: 1px solid rgba(255,255,255,0.35);
    }

    .simple-footer p {
      margin: 0;
      font-size: 15px;
      font-weight: 500;
    }

    .simple-footer .footer-links {
      margin-top: 8px;
    }

    .simple-footer .footer-links a {
      margin: 0 10px;
      font-size: 14px;
      color: #4b2e2e;
      opacity: 0.9;
      text-decoration: none;
      transition: .3s;
    }

    .simple-footer .footer-links a:hover {
      opacity: 1;
      text-decoration: underline;
    }

  </style>
</head>

<body>

  <!-- HEADER -->
  <nav class="navbar navbar-expand-lg glass-nav px-4 py-2">
    <a class="navbar-brand" href="/blog/get">MyBlog</a>

    <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav gap-3">
        <li class="nav-item"><a class="nav-link" href="/blog/get">All Blogs</a></li>
        <li class="nav-item"><a class="nav-link" href="/blog/add">Add Blog</a></li>
      </ul>
    </div>
  </nav>

  <!-- PAGE CONTENT -->
  <div class="container">

    <h2 class="page-title">All Blogs</h2>

    <div class="row">
      <% blogs.forEach(blog => { %>

        <div class="col-md-4 mb-4">
          <div class="blog-card">

            <span class="badge-tag">Blog</span>

            <img src="<%= blog.image %>" class="blog-image" alt="Blog Image">

            <div class="p-3">

              <h5 class="blog-title"><%= blog.title %></h5>

              <p class="blog-text"><%= blog.content.replace(/<[^>]*>/g, '').substring(0, 120) %>...</p>

              <div class="d-flex gap-2 mt-2">
                <a href="/blog/edit/<%= blog._id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/blog/delete/<%= blog._id %>" 
                   onclick="return confirm('Are you sure?')" 
                   class="btn btn-danger btn-sm">Delete</a>
              </div>

            </div>
          </div>
        </div>

      <% }) %>
    </div>

  </div>

  <!-- FOOTER -->
  <footer class="simple-footer">
    <p>© 2025 MyBlog • All Rights Reserved</p>
    <div class="footer-links">
      <a href="/blog/get">Blogs</a>
      <a href="/blog/add">Add Blog</a>
      <a href="#">About</a>
      <a href="#">Contact</a>
    </div>
  </footer>

</body>
</html>
