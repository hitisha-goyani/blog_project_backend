<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Blogs</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f4f6fa;
      font-family: 'Segoe UI', sans-serif;
    }

    .page-title {
      font-size: 34px;
      font-weight: 700;
      color: #333;
      text-align: center;
      margin-bottom: 35px;
    }

    .blog-card {
      background: #fff;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
      transition: transform .25s ease, box-shadow .25s ease;
    }

    .blog-card:hover {
      transform: translateY(-7px);
      box-shadow: 0 15px 35px rgba(0,0,0,0.12);
    }

    .blog-image {
      width: 100%;
      height: 220px;
      object-fit: cover;
    }

    .blog-title {
      font-size: 20px;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .blog-text {
      font-size: 15px;
      color: #555;
      margin-bottom: 15px;
    }

    .btn-warning {
      background: #FFC107;
      border: none;
      font-weight: 600;
      border-radius: 8px;
    }

    .btn-danger {
      border-radius: 8px;
      font-weight: 600;
    }
  </style>
</head>

<body>

  <div class="container mt-4">

    <h2 class="page-title">All Blogs</h2>

    <div class="row">
      <% blogs.forEach(blog => { %>

        <div class="col-md-4 mb-4">
          <div class="blog-card">

            <!-- Blog Image -->
            <img src="<%= blog.image %>" class="blog-image" alt="Blog Image">

            <div class="p-3">

              <!-- Blog Title -->
              <h5 class="blog-title"><%= blog.title %></h5>

              <!-- Blog Short Content -->
              <p class="blog-text"><%= blog.content.substring(0, 120) %>...</p>

              <!-- Buttons -->
              <div class="d-flex gap-2">
                <a href="/blog/edit/<%= blog._id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/blog/delete/<%= blog._id %>" class="btn btn-danger btn-sm"
                   onclick="return confirm('Are you sure you want to delete this blog?')">
                  Delete
                </a>
              </div>

            </div>
          </div>
        </div>

      <% }) %>
    </div>

  </div>

</body>
</html>
